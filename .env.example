# .env.example (Template - copy to .env and fill in your values)

# ============================================
# API Configuration
# ============================================
API_TITLE=Digital Marketing Chatbot API
API_VERSION=1.0.0
API_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000

# ============================================
# Vector Database Configuration
# ============================================
CHROMA_PERSIST_DIR=./chroma_db
COLLECTION_NAME=products_collection

# ============================================
# Embedding Model Configuration
# ============================================
# Options:
# - paraphrase-multilingual-mpnet-base-v2 (Recommended for Persian)
# - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (Faster, smaller)
# - intfloat/multilingual-e5-large (Better quality, slower)
EMBEDDING_MODEL_NAME=paraphrase-multilingual-mpnet-base-v2

# ============================================
# Data Configuration
# ============================================
DATA_ROOT_DIR=./data
PRODUCTS_JSON_FILENAME=products.json

# ============================================
# Search Configuration
# ============================================
DEFAULT_SEARCH_TOP_K=5
MAX_SEARCH_TOP_K=20
MIN_RELEVANCE_SCORE=0.3

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
